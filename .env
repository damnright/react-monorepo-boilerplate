# ==============================================================================
# Docker Compose 环境变量配置示例
# ==============================================================================
# 复制此文件为 .env 文件并根据需要修改配置

# =============================================================================
# 应用基础配置
# =============================================================================
NODE_ENV=production
APP_NAME=EzBoard

# =============================================================================
# 端口配置
# =============================================================================
# HTTP/HTTPS端口
HTTP_PORT=80
HTTPS_PORT=443

# 服务端口
SERVER_PORT=5055
CLIENT_DEV_PORT=5173
SERVER_DEV_PORT=5056

# 数据库端口
MONGO_PORT=27017

# =============================================================================
# MongoDB 数据库配置
# =============================================================================
MONGO_DB_NAME=ezboard
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-strong-root-password-here

# 应用数据库用户（用于应用连接）
MONGO_APP_USERNAME=appuser
MONGO_APP_PASSWORD=your-strong-app-password-here

# =============================================================================
# JWT 配置
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-make-it-long-and-random
JWT_EXPIRES_IN=24h

# =============================================================================
# CORS 配置
# =============================================================================
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# 文件上传配置
# =============================================================================
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=10485760

# =============================================================================
# 日志配置
# =============================================================================
LOG_LEVEL=info

# =============================================================================
# 安全配置
# =============================================================================
# 速率限制 (请求数/时间窗口ms)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# =============================================================================
# 功能开关
# =============================================================================
ENABLE_SWAGGER=false
ENABLE_RATE_LIMIT=true

# =============================================================================
# 开发环境配置
# =============================================================================
# 开发环境下的前端API地址
VITE_API_URL=http://localhost:5055/api 